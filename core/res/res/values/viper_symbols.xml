<resources>

  <!-- Power menu reboot -->
  <java-symbol name="reboot_to_bootloader_title" type="string" />
  <java-symbol name="reboot_to_bootloader_message" type="string" />
  <java-symbol name="reboot_to_recovery_title" type="string" />
  <java-symbol name="reboot_to_recovery_message" type="string" />
  <java-symbol name="reboot_system_title" type="string" />
  <java-symbol name="reboot_system_message" type="string" />
  <java-symbol type="array" name="config_rebootActionsList" />
  <java-symbol type="array" name="values_globalActionsList" />
  <java-symbol type="style" name="GlobalActionsAnimation" />
  <java-symbol type="style" name="GlobalActionsAnimationTop" />
  <java-symbol type="style" name="GlobalActionsAnimationEnter" />

  <!-- PlatLogo -->
  <java-symbol type="drawable" name="platlogo_viper" />

  <!-- Forcefully tint notification icon text -->
  <java-symbol type="bool" name="config_useDarkBgNotificationIconTextTinting" />

  <!-- System fonts -->
  <java-symbol type="array" name="config_fontPackages" />

  <!-- Status bar notification ticker -->
  <style name="TextAppearance.StatusBar.PhoneTicker" parent="@*android:style/TextAppearance.StatusBar">
      <item name="android:textSize">14dp</item>
  </style>

  <!-- Custom Analog clock -->
  <java-symbol type="drawable" name="custom_clock_dial" />
  <java-symbol type="drawable" name="custom_clock_dial_ambient" />
  <java-symbol type="drawable" name="custom_clock_hand_hour" />
  <java-symbol type="drawable" name="custom_clock_hand_minute" />
  <java-symbol type="color" name="analog_clock_border_color" />
  <java-symbol type="color" name="analog_clock_face_color" />
  <java-symbol type="color" name="analog_clock_hand_hour_color" />
  <java-symbol type="color" name="analog_clock_hand_minute_color" />

  <!-- Shutdown/reboot screen -->
  <java-symbol type="layout" name="shutdown_layout" />
  <java-symbol type="color" name="shutdown_background" />
  <java-symbol type="color" name="shutdown_primary_text" />
  <java-symbol type="color" name="shutdown_progress_tint" />
  <java-symbol type="dimen" name="shutdown_margin" />
  <java-symbol type="dimen" name="shutdown_logo_margin_top" />
  <java-symbol type="dimen" name="shutdown_primary_text_margin_top" />
  <java-symbol type="id" name="shutdown_logo" />
  <java-symbol type="id" name="shutdown_message" />
  <java-symbol type="id" name="shutdown_progress" />

</resources>
